<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_cambiar_datos5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:backgroundTint="#D3C3D1"
        android:elevation="10dp"
        android:onClick="volverLandigDesdeCambiarD"
        android:padding="8dp"
        android:text="Volver atrás"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cambiar_datos" />


    <Button
        android:id="@+id/btn_cambiar_datos"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#9E7B9B"
        android:elevation="10dp"
        android:onClick="cambiarDatos"
        android:padding="8dp"
        android:text=" Guardar cambios"
        android:textColor="#fff"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuevaTallaSpinner" />

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Cambia tus datos"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nuevoNombreEditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/textbox"
        android:backgroundTint="@color/blue_int1"
        android:ems="10"
        android:hint="Nuevo nombre*"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreTextView" />

    <EditText
        android:id="@+id/nuevoTelEditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/textbox"
        android:backgroundTint="@color/blue_int1"
        android:ems="10"
        android:hint="Nuevo teléfono*"
        android:inputType="phone"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneTextView" />

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Nombre y apellidos:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/nuevoNombreEditText"
        app:layout_constraintTop_toBottomOf="@+id/tituloTextView" />

    <Spinner
        android:id="@+id/nuevaTallaSpinner"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#EAEBED"
        android:entries="@array/Talla"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/nuevoTelEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/TallaTextView"
        app:layout_constraintTop_toBottomOf="@+id/nuevoTelEditText" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Teléfono:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/nuevoEmailEditText"
        app:layout_constraintTop_toBottomOf="@+id/nuevoEmailEditText" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="E-mail:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/nuevoNombreEditText"
        app:layout_constraintTop_toBottomOf="@+id/nuevoNombreEditText" />

    <TextView
        android:id="@+id/TallaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talla:"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/nuevaTallaSpinner"
        app:layout_constraintStart_toStartOf="@+id/nuevoTelEditText"
        app:layout_constraintTop_toTopOf="@+id/nuevaTallaSpinner" />

    <EditText
        android:id="@+id/nuevoEmailEditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/textbox"
        android:backgroundTint="@color/blue_int1"
        android:ems="10"
        android:hint="Nuevo email*"
        android:inputType="textEmailAddress"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>