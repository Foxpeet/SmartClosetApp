<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/recuadroElementoLista"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.9"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangulo" />

    <ImageView
        android:id="@+id/fotoElementoListaSuperior"
        android:layout_width="174dp"
        android:layout_height="141dp"
        android:elevation="30dp"
        app:layout_constraintBottom_toTopOf="@+id/fotoElementoListaInferior"
        app:layout_constraintEnd_toEndOf="@+id/recuadroElementoLista"
        app:layout_constraintStart_toStartOf="@+id/recuadroElementoLista"
        app:layout_constraintTop_toTopOf="@+id/recuadroElementoLista" />

    <ImageView
        android:id="@+id/fotoElementoListaInferior"
        android:layout_width="177dp"
        android:layout_height="151dp"
        android:elevation="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroElementoLista"
        app:layout_constraintEnd_toEndOf="@+id/recuadroElementoLista"
        app:layout_constraintStart_toStartOf="@+id/recuadroElementoLista"
        app:layout_constraintTop_toTopOf="@+id/recuadroElementoLista"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>

