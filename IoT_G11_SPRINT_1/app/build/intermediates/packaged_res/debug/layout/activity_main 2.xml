<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_landing_2">


        <TextView
            android:id="@+id/textoHola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="128dp"
            android:text="Hola,"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textoNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="usuario"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoHola" />

        <Button
            android:id="@+id/btn_cambiar_datos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="480dp"
            android:layout_marginEnd="88dp"
            android:backgroundTint="#63B6E4"
            android:elevation="10dp"
            android:onClick="abrirPerfil"
            android:padding="8dp"
            android:text="Mi perfil"
            android:textColor="#fff"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_cambiar_datos2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="88dp"
            android:backgroundTint="#63B6E4"
            android:elevation="10dp"
            android:onClick="abrirCambiarDatos"
            android:padding="8dp"
            android:text="Cambiar mis datos"
            android:textColor="#fff"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_cambiar_datos" />

        <Button
            android:id="@+id/btn_cambiar_datos3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="88dp"
            android:backgroundTint="#EDA84A"
            android:elevation="10dp"
            android:onClick="cerrarSesion"
            android:padding="8dp"
            android:text="Cerrar sesiÃ³n"
            android:textColor="#fff"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_cambiar_datos2" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:onClick="lanzarAcercaDe"
            android:src="@drawable/icono_acercade"
            app:layout_constraintBottom_toTopOf="@+id/btn_cambiar_datos"
            app:layout_constraintEnd_toEndOf="@+id/btn_cambiar_datos">

        </ImageButton>


        <!-- ______Parte de diego______ -->


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>